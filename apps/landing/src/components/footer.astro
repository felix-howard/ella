---
/**
 * Site-wide footer with 3-column layout: logo/tagline, navigation links, legal/social.
 * Dynamic copyright year. Uses shared nav config for DRY compliance.
 */
import { navLinks, legalLinks } from "@/config/navigation";
import { siteConfig } from "@/config/site";

const hasLinkedIn = siteConfig.linkedIn !== "";
const hasFacebook = siteConfig.facebook !== "";
---

<footer class="border-t border-gray-100 bg-gray-50 py-12">
  <div class="mx-auto max-w-6xl px-6">
    <div class="grid gap-8 md:grid-cols-3">
      <!-- Column 1: Logo & tagline -->
      <div>
        <a href="/" class="focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-500">
          <img src="/ella-logo.png" alt="ella.tax" class="h-8 object-contain" />
        </a>
        <p class="mt-3 max-w-xs text-sm leading-relaxed text-gray-600">
          AI-powered tax document management for modern tax professionals.
        </p>
      </div>

      <!-- Column 2: Navigation -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-900">
          Navigation
        </h3>
        <ul class="mt-3 flex flex-col gap-2">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-gray-600 transition-colors hover:text-primary-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-500"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Column 3: Legal & Social -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-900">
          Legal
        </h3>
        <ul class="mt-3 flex flex-col gap-2">
          {legalLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-gray-600 transition-colors hover:text-primary-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-500"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>

        <!-- Social icons (only render if URLs configured) -->
        {(hasLinkedIn || hasFacebook) && (
          <div class="mt-6 flex gap-4">
            {hasFacebook && (
              <a
                href={siteConfig.facebook}
                class="text-gray-400 transition-colors hover:text-primary-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-500"
                aria-label="Facebook"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                </svg>
              </a>
            )}
            {hasLinkedIn && (
              <a
                href={siteConfig.linkedIn}
                class="text-gray-400 transition-colors hover:text-primary-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-500"
                aria-label="LinkedIn"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
              </a>
            )}
          </div>
        )}
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-10 border-t border-gray-200 pt-6">
      <p class="text-center text-sm text-gray-500">
        &copy; {new Date().getFullYear()} Ella. All rights reserved.
      </p>
    </div>
  </div>
</footer>
